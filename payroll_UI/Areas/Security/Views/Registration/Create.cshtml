@model BOL.tbl_user

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Security/Views/Shared/_AuthLayout.cshtml";
}

@if (TempData["SuccessMsg"] != null)
{
    <div class="alert alert-success alert-dismissible">
        @TempData["SuccessMsg"].ToString()
    </div>
}

@if (TempData["ErrorMsg"] != null)
{
    <div class="alert alert-warning alert-dismissible">
        @TempData["ErrorMsg"].ToString()
    </div>
}

<div class="register-box">
    <div class="register-logo">
        <a href="../../index2.html"><b>Registration</b></a>
    </div>

    <div class="card">
        <div class="card-body register-card-body">
            <p class="login-box-msg">Register a new membership</p>

            @using (Html.BeginForm("Create", "Registration", new { areas = "Security" }, FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="col-md-12">
                        <div class="input-group mb-3">
                            @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control", @placeholder = "User Name" } })
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-user"></span>
                                </div>
                            </div>
                        </div>
                        @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
                    </div>


                    <div class="col-md-12">
                        <div class="input-group mb-3">
                            @Html.EditorFor(model => model.pasword, new { htmlAttributes = new { @class = "form-control", @placeholder = "Password" } })
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-lock"></span>
                                </div>
                            </div>
                        </div>
                        @Html.ValidationMessageFor(model => model.pasword, "", new { @class = "text-danger" })
                    </div>


                    <div class="col-md-12">
                        <div class="input-group mb-3">
                            @Html.EditorFor(model => model.role, new { htmlAttributes = new { @class = "form-control", @placeholder = "Role" } })
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-user"></span>
                                </div>
                            </div>
                        </div>
                        @Html.ValidationMessageFor(model => model.role, "", new { @class = "text-danger" })
                    </div>


                    <div class="row">
                        <div class="col-8">
                            <div class="icheck-primary">
                                <input type="checkbox" id="agreeTerms" name="terms" value="agree">
                                <label for="agreeTerms">
                                    I agree to the <a href="#">terms</a>
                                </label>
                            </div>
                        </div>
                        <!-- /.col -->
                        <div class="col-4">
                            <button type="submit" class="btn btn-primary btn-block">Register</button>
                        </div>
                        <!-- /.col -->
                    </div>
                </div>
            }

            @*<a href="login.html" class="text-center">I already have a membership</a>*@
            @Html.ActionLink("I already have a membership", "Login", "Login", new { areas = "Security" }, new { @class = "text-center" })
        </div>
        <!-- /.form-box -->
    </div><!-- /.card -->
</div>
<!-- /.register-box -->
